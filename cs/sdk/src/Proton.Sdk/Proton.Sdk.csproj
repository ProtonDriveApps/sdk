<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageTags>Authentication Session Account</PackageTags>
    <Description>Provides the means to authenticate with the Proton API and get user account information.</Description>
    <EmbedAllSources>true</EmbedAllSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Http" />
    <PackageReference Include="Microsoft.Extensions.Http.Resilience" />
    <PackageReference Include="Proton.Cryptography" PrivateAssets="compile" />
    <PackageReference Include="System.Linq.Async" />
  </ItemGroup>

  <ItemGroup Condition="!$(RuntimeIdentifier.StartsWith('ios')) And !$(RuntimeIdentifier.StartsWith('osx'))">
    <PackageReference Include="Microsoft.Data.Sqlite" />
  </ItemGroup>

  <!--
  The bundle_green package, which is supposed to work for all platforms, seems to fail when building for iOS and macOS.
  So instead, as a workaround, we conditionally add bundle_sqlite3 when building for iOS or macOS.
  -->
  <ItemGroup Condition="$(RuntimeIdentifier.StartsWith('ios')) Or $(RuntimeIdentifier.StartsWith('osx'))">
    <PackageReference Include="Microsoft.Data.Sqlite.Core" />
    <PackageReference Include="SQLitePCLRaw.bundle_sqlite3" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Proton.Drive.Sdk" />
    <InternalsVisibleTo Include="Proton.Photos.Sdk" />
    <InternalsVisibleTo Include="Proton.Drive.Sdk.Tests" />
    <InternalsVisibleTo Include="$(NativeLibPrefix)proton_sdk" />
    <InternalsVisibleTo Include="$(NativeLibPrefix)proton_drive_sdk" />
  </ItemGroup>

</Project>
